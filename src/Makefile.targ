%: %.c
	$(LINK.c) $< $(LIBS)

%.so: %.c
	$(LINK.c) $< $(LIBS)
	$(CTFCONVERT) -l $(BUILDSTAMP) $@

%.o: src/%.c
	$(COMPILE.c) $<

mdata_%.o: $(DOCKER_DIR)/mdata-client/%.c
	$(COMPILE.c) $^

mdata_%.o: $(DOCKER_DIR)/mdata-client/plat/%.c
	$(COMPILE.c) $^

%.o: $(STRINGS_DIR)/%.c
	$(COMPILE.c) $^

%.o: $(DOCKER_DIR)/src/%.c
	$(COMPILE.c) $^

%.o: $(DOCKER_DIR)/json-nvlist/%.c
	$(COMPILE.c) $^

%: %.js
	cp $< $@
	chmod 0755 $@

%: %.sh
	cp $< $@
	chmod 0755 $@

%: %.d
	cp $< $@
	chmod 0755 $@
